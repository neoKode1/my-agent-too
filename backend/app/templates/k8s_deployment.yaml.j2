apiVersion: apps/v1
kind: Deployment
metadata:
  name: {{ project_name | replace(' ', '-') | lower }}
  labels:
    app: {{ project_name | replace(' ', '-') | lower }}
    generated-by: plus12monkeys
spec:
  replicas: 2
  selector:
    matchLabels:
      app: {{ project_name | replace(' ', '-') | lower }}
  template:
    metadata:
      labels:
        app: {{ project_name | replace(' ', '-') | lower }}
    spec:
      containers:
        - name: agent
          image: {{ project_name | replace(' ', '-') | lower }}:latest
          ports:
            - containerPort: 8080
          envFrom:
            - secretRef:
                name: {{ project_name | replace(' ', '-') | lower }}-secrets
          resources:
            requests:
              cpu: "250m"
              memory: "256Mi"
            limits:
              cpu: "1000m"
              memory: "1Gi"
          livenessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 10
            periodSeconds: 30
          readinessProbe:
            httpGet:
              path: /
              port: 8080
            initialDelaySeconds: 5
            periodSeconds: 10
{% if mcp_servers %}
          volumeMounts:
            - name: mcp-config
              mountPath: /app/mcp-config.json
              subPath: mcp-config.json
              readOnly: true
      volumes:
        - name: mcp-config
          configMap:
            name: {{ project_name | replace(' ', '-') | lower }}-mcp
{% endif %}

