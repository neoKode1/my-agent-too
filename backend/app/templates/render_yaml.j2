services:
  - type: web
    name: {{ project_name | replace(" ", "-") | lower }}
    runtime: docker
{% if framework == "vercel-ai" %}
    dockerfilePath: Dockerfile_node
{% elif framework == "rig" %}
    dockerfilePath: Dockerfile_rust
{% elif framework == "adk-go" %}
    dockerfilePath: Dockerfile_go
{% else %}
    dockerfilePath: Dockerfile
{% endif %}
    envVars:
{% for var in env_vars %}
      - key: {{ var }}
        sync: false
{% endfor %}
    healthCheckPath: /
    plan: starter
    autoDeploy: true

