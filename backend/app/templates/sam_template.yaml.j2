# Deploy: sam build && sam deploy --guided

AWSTemplateFormatVersion: '2010-09-09'
Transform: AWS::Serverless-2016-10-31
Description: >
  {{ project_name }} — {{ template_description }}
  Generated by +12 Monkeys.

Globals:
  Function:
    Timeout: 120
    MemorySize: 512
{% if framework in ("vercel-ai",) %}
    Runtime: nodejs22.x
{% elif framework in ("rig",) %}
    Runtime: provided.al2023
    Architectures:
      - x86_64
{% elif framework in ("adk-go",) %}
    Runtime: provided.al2023
    Architectures:
      - x86_64
{% else %}
    Runtime: python3.12
{% endif %}

Resources:
  AgentFunction:
    Type: AWS::Serverless::Function
    Properties:
      FunctionName: {{ project_name | replace(' ', '-') | lower }}-agent
{% if framework in ("vercel-ai",) %}
      Handler: agent.handler
      CodeUri: ./
{% elif framework in ("rig", "adk-go") %}
      Handler: bootstrap
      CodeUri: ./
{% else %}
      Handler: agent.handler
      CodeUri: ./
{% endif %}
      Description: {{ template_name }} agent function
      Environment:
        Variables:
{% for var in env_vars %}
          {{ var }}: !Ref {{ var }}Parameter
{% endfor %}
      Events:
        AgentApi:
          Type: Api
          Properties:
            Path: /agent
            Method: post
        HealthCheck:
          Type: Api
          Properties:
            Path: /health
            Method: get

Parameters:
{% for var in env_vars %}
  {{ var }}Parameter:
    Type: String
    NoEcho: true
    Description: "{{ var }}"
{% endfor %}

Outputs:
  AgentApiUrl:
    Description: "API Gateway endpoint URL"
    Value: !Sub "https://${ServerlessRestApi}.execute-api.${AWS::Region}.amazonaws.com/Prod/"
  AgentFunction:
    Description: "Lambda function ARN"
    Value: !GetAtt AgentFunction.Arn

