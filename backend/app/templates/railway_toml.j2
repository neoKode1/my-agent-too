[build]
{% if framework == "vercel-ai" %}
builder = "nixpacks"
nixpacksPlan.providers = ["node"]
{% elif framework in ("rig", "adk-go") %}
builder = "dockerfile"
dockerfilePath = "Dockerfile"
{% else %}
builder = "dockerfile"
dockerfilePath = "Dockerfile"
{% endif %}

[deploy]
{% if framework == "vercel-ai" %}
startCommand = "npx tsx agent.ts"
{% elif framework == "rig" %}
startCommand = "./agent"
{% elif framework == "adk-go" %}
startCommand = "./agent"
{% else %}
startCommand = "python agent.py"
{% endif %}
healthcheckPath = "/"
healthcheckTimeout = 30
restartPolicyType = "on_failure"
restartPolicyMaxRetries = 3

[service]
internalPort = 8080

