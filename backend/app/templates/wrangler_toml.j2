# {{ project_name }} — Cloudflare Workers Config
# Generated by +12 Monkeys
# Docs: https://developers.cloudflare.com/workers/wrangler/configuration/
# Deploy: npx wrangler deploy

name = "{{ project_name | replace(' ', '-') | lower }}"
main = {% if framework == "vercel-ai" %}"agent.ts"{% elif framework in ("rig", "adk-go") %}"src/worker.js"{% else %}"worker.py"{% endif %}

compatibility_date = "2025-01-01"

{% if framework == "vercel-ai" %}
# Node.js compatibility for TypeScript agents
node_compat = true
{% endif %}

# Environment variables (set via `wrangler secret put <KEY>`)
# [vars]
# NON_SECRET_VAR = "value"

# KV Namespace bindings (optional — for agent state/memory)
# [[kv_namespaces]]
# binding = "AGENT_KV"
# id = "<your-kv-namespace-id>"

# R2 bucket bindings (optional — for file storage)
# [[r2_buckets]]
# binding = "AGENT_STORAGE"
# bucket_name = "{{ project_name | replace(' ', '-') | lower }}-storage"

# D1 database bindings (optional — for structured data)
# [[d1_databases]]
# binding = "AGENT_DB"
# database_name = "{{ project_name | replace(' ', '-') | lower }}-db"
# database_id = "<your-d1-database-id>"

[observability]
enabled = true

