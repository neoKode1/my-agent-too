# ── Stage 1: Build ──
FROM golang:1.23-alpine AS builder

WORKDIR /app

# Cache dependencies
COPY go.mod go.sum* ./
RUN go mod download

# Build
COPY *.go ./
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o agent .

# ── Stage 2: Runtime ──
FROM gcr.io/distroless/static-debian12

WORKDIR /app

COPY --from=builder /app/agent .
COPY .env.example .env
{% if mcp_servers %}
COPY mcp-config.json .
{% endif %}

EXPOSE 8080

ENTRYPOINT ["./agent"]

